name: SuperArgo Scraping Diario

on:
  schedule:
    # 2:00 AM Bogotá (UTC-5) es 7:00 AM UTC
    - cron: '0 7 * * *'
  workflow_dispatch: # Permite ejecución manual para pruebas

jobs:
  scraping_job:
    runs-on: ubuntu-latest

    steps:
    - name: Clonar repositorio
      uses: actions/checkout@v4

    - name: Configurar Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.10'

    - name: Instalar dependencias
      run: |
        pip install selenium pandas openpyxl

    - name: Ejecutar Scraper de SuperArgo
      env:
        PQRD_USER: ${{ secrets.PQRD_USER }}
        PQRD_PASS: ${{ secrets.PQRD_PASS }}
      run: Web Scraping.py

    - name: Guardar Excel como Artifact
      uses: actions/upload-artifact@v4
      with:
        name: Resultado_Scraping
        path: Reclamos_scraping.xlsx
        retention-days: 5
